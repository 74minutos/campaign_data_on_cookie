const getUrl = require('getUrl');
const getReferrerUrl = require('getReferrerUrl');
const createQueue = require('createQueue');
const setCookie = require('setCookie');
const queryPermission = require('queryPermission');
const decode = require('decodeUriComponent');
const log = require('logToConsole');

let fail = false;


const parameters = data.parameters.split(',');
const queryString = getUrl('query');
const queryParams = queryString.length ? queryString.split('&') : [];

if (queryParams.filter(pair => parameters.indexOf(pair.split('=')[0]) > -1).length) {
  if (queryPermission('set_cookies', data.campaign_url_cookie)) {
    setCookie(data.campaign_url_cookie, getUrl(), {
      domain: 'auto',
      path: '/'
     });
    // interesante crear aquí un diccionario para almacenar la cookie con el nombre que queramos
    if(queryString.indexOf('utm') > -1){
      var i;
      for (i=0; queryParams.length; i++) {
        var keyval = queryParams[i].split("=");
        setCookie(keyval[0], decode(keyval[1]));
      }
    } else if(queryString.indexOf('gclid') >-1){
        setCookie('utm_source', 'google');
        setCookie('utm_medium', 'cpc');
    } else if(queryString.indexOf('fclid') >-1){
        setCookie('utm_source', 'facebook');
        setCookie('utm_medium', 'cpc');
      } else {
      log('Invalid permissions for writing ' + data.campaign_url_cookie + ' cookie!');
      fail = true;
      }
      }
  } else {
    // Observamos si el referrer no contiene el propio hostname
  const referrerHost = getReferrerUrl('host');
  if (referrerHost.indexOf(getUrl('host')) === -1 && referrerHost !== '') {
    if (queryPermission('set_cookies', data.referrer_cookie)) {
      setCookie(data.referrer_cookie, getReferrerUrl(), {
        domain: 'auto',
        path: '/'
      });
    } if(referrerHost.indexOf('google')>-1){
        setCookie('utm_source', 'google');
        setCookie('utm_medium', 'organic');
    }
      else {
      log('Invalid permissions for writing ' + data.referrer_cookie + ' cookie!');
      fail = true;
    }
  }
  }
if (fail) { data.gtmOnFailure(); } else { data.gtmOnSuccess(); }


